<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="user" class="com.pxt.pojo.user.User">
		<property name="userid" value="302312" />
		<property name="username" value="pxt" />
	</bean>
	
	<bean id="userDao" class="com.pxt.dao.user.UserDao" />

	<bean id="userService" class="com.pxt.service.user.UserService">
		<property name="userDao" ref="userDao" />
	</bean>

</beans>